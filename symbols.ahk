#Requires AutoHotkey v2.0
#SingleInstance Force

; ================================================
; 記号キーを押したときに、常に半角記号を出力する設定
; ================================================

; 「?」キー → 半角「?」
?::SendText("?")

; 「<」「>」キー → 半角「<」「>」
<::SendText("<")
>::SendText(">")

; 「(」「)」キー → 半角「(」「)」
(::SendText("(")
)::SendText(")")

; 「%」キー → 半角「%」
%::SendText("%")

; 「!」キー → 半角「!」
!::SendText("!")

; 「=」キー → 半角「=」
=::SendText("=")

; 「*」キー → 半角「*」
*::SendText("*")

; 「`」キー（バッククオート）→ 半角「`」
`::SendInput "{U+0060}"

; ダブルクォート「"」キー → 半角「"」
"::SendInput "{U+0022}"

; シングルクォート「'」キー → 半角「'」
'::SendInput "{U+0027}"

; 「&」キー → 半角「&」
&::SendInput "{U+0026}"

; 「#」キー → 半角「#」
#::SendText("#")

; 「$」キー → 半角「$」
$::SendText("$")

; 「~」キー（チルダ） → 半角「~」
~::SendText("~")

; 「^」キー → 半角「^」
^::SendText("^")
